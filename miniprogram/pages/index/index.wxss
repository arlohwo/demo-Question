.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.textBox{
  border: 1px solid;
  padding: 10px;
  border-radius: 10px;
}
.inputBox{
  border: 1px solid;
  height: 50px;
  margin-top: 10px;
  border-radius: 10px;
}
.btnBox{
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
  align-items: center;
  position: fixed;
  height:80px;
  bottom: 0;
}
.previousBtn{
  margin-right: 5px;
  margin-left: 5px;
  flex: 1;
}
.nextBtn{
  margin-left: 5px;
  margin-right: 5px;
  flex: 1;
}
.labelBox{
  display: flex;
  flex-direction: column;
  margin-top: 10px
}